##############################################################################
# FreePBX Docker Environment Configuration
# 
# Copy this file to .env and configure the values according to your setup
# Command: cp .env.example .env
##############################################################################

# ===========================================================================
# SSL Configuration
# ===========================================================================

# SSL Mode: "selfsigned" for self-signed certificate or "letsencrypt" for Let's Encrypt
SSL_MODE=selfsigned

# Domain name for your FreePBX server (required)
# For Let's Encrypt: must be a valid domain pointing to this server
# For Self-signed: can be any domain (used in certificate)
DOMAIN=freepbx.ovox.io

# Email address for SSL certificate notifications (required for Let's Encrypt)
SSL_EMAIL=asterisk@ovox.io

# Self-Signed Certificate Details (only used when SSL_MODE=selfsigned)
SSL_COUNTRY=US
SSL_STATE=Puerto Rico
SSL_CITY=San Juan
SSL_ORG=Vidalinux.com Corp.
SSL_OU=Linux Consulting

# ===========================================================================
# Database Configuration
# ===========================================================================

# MariaDB Root Password
MYSQL_ROOT_PASSWORD=asterisk

# Asterisk Database User Credentials
DB_USER=asterisk
DB_PASS=asteriskpass

# Database Engine (mysql or mariadb)
DBENGINE=mysql

# Database Names
DBNAME=asterisk
CDRDBNAME=asteriskcdrdb

# Database Connection (internal network)
DBHOST=172.19.0.2
DBPORT=3306

# ===========================================================================
# FreePBX Configuration
# ===========================================================================

# FreePBX User and Group
USER=asterisk
GROUP=asterisk

# FreePBX Directories
WEBROOT=/var/www/html
ASTETCDIR=/etc/asterisk
ASTMODDIR=/usr/lib64/asterisk/modules
ASTVARLIBDIR=/var/lib/asterisk
ASTAGIDIR=/var/lib/asterisk/agi-bin
ASTSPOOLDIR=/var/spool/asterisk
ASTRUNDIR=/var/run/asterisk
ASTLOGDIR=/var/log/asterisk
AMPBIN=/var/lib/asterisk/bin
AMPSBIN=/usr/sbin
AMPCGIBIN=/var/www/cgi-bin
AMPPLAYBACK=/var/lib/asterisk/playback

# ===========================================================================
# Timezone Configuration
# ===========================================================================

# Timezone (see https://en.wikipedia.org/wiki/List_of_tz_database_time_zones)
TZ=America/Puerto_Rico

# ===========================================================================
# Network Configuration
# ===========================================================================

# Docker Network Subnet
NETWORK_SUBNET=172.19.0.0/24
NETWORK_GATEWAY=172.19.0.1

# Container IP Addresses
MARIADB_IP=172.19.0.2
FREEPBX_IP=172.19.0.3

# ===========================================================================
# Port Configuration
# ===========================================================================

# HTTPS Port (default: 443)
HTTPS_PORT=443

# HTTP Port for certbot (default: 80)
HTTP_PORT=80

# Asterisk IAX2 Port
IAX2_PORT=4569

# Asterisk Manager Interface Port
AMI_PORT=4445

# SIP Ports
SIP_PORT=5060
SIP_TLS_PORT=5061
PJSIP_PORT=5160

# RTP Port Range (for audio/video)
RTP_START=18000
RTP_END=18100

# ===========================================================================
# Container Configuration
# ===========================================================================

# FreePBX Docker Image
FREEPBX_IMAGE=docker.io/ovox/freepbx:17.0

# MariaDB Docker Image
MARIADB_IMAGE=mariadb:latest

# Container Names
FREEPBX_CONTAINER_NAME=freepbx_server
MARIADB_CONTAINER_NAME=freepbx_mariadb

# Restart Policy (no, always, on-failure, unless-stopped)
RESTART_POLICY=always
